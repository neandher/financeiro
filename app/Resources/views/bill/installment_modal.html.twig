<div class="modal fade" tabindex="-1" role="dialog" id="generateInstallment">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Gerar Parcelas</h4>
            </div>
            <div class="modal-body">
                {{ form_start(form_generate_installments, {'attr': {'class' : 'form-horizontal', 'onsubmit' : 'return false'}}) }}

                {{ form_row(form_generate_installments.dueDateAt, {'label_attr' : {'class' : 'col-md-4'}, form_row_horizontal : true, set_col_md_field : 'col-md-8'}) }}
                {{ form_row(form_generate_installments.amount, {'label_attr' : {'class' : 'col-md-4'}, form_row_horizontal : true, set_col_md_field : 'col-md-8'}) }}
                {{ form_row(form_generate_installments.number, {'label_attr' : {'class' : 'col-md-4'}, form_row_horizontal : true, set_col_md_field : 'col-md-8'}) }}

                {{ form_end(form_generate_installments) }}

                <div class="clearfix"></div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="installments_generate">
                    {{ 'billInstallments.action.generate'|trans }}
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    {{ 'form.link.cancel'|trans }}
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->