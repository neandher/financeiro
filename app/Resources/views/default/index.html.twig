                                </td>
                                <td>{{ installment.dueDateAt|date }}</td>
                                <td>
                                <span class="label label-sm label-danger">
                                    {{ installment.amount|number_format }}
                                </span>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                {% endblock %}
            {% endembed %}
        </div>

        <!-- *************** FIM DESPESAS ************** -->

        <!-- *************** RECEITAS ************** -->

