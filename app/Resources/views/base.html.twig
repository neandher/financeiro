<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Financeiro{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('plugins/bootstrap-3.3.6-dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet"
          href="{{ asset('plugins/bootstrap-datepicker-1.6.1-dist/css/bootstrap-datepicker3.min.css') }}">
</head>
<body>

{{ include('partials/navbar.html.twig') }}

<div class="container-fluid">
    {% block body %}{% endblock %}
</div>

<script src="{{ asset('js/jquery.min.js') }}"></script>
<script src="{{ asset('plugins/bootstrap-3.3.6-dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('plugins/bootstrap-datepicker-1.6.1-dist/js/bootstrap-datepicker.min.js') }}"></script>
<script src="{{ asset('plugins/bootstrap-datepicker-1.6.1-dist/locales/bootstrap-datepicker.pt-BR.min.js') }}"></script>
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
<script src="{{ asset('js/scriptsfields.js') }}"></script>
<script src="{{ asset('js/scripts.js') }}"></script>

<script>
    $(document).ready(function () {
        $('.js-datepicker').datepicker({
            format: 'dd-mm-yyyy',
            language: 'pt-BR'
        });
    });
</script>

{% block javascripts %}{% endblock %}

</body>
</html>
