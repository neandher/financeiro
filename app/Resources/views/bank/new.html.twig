{% extends 'base.html.twig' %}

{% block body %}

    <div class="panel panel-default">

        <div class="panel-heading">

            <h3 class="pull-left">
                <i class="glyphicon glyphicon-list-alt"></i> {{ 'bank.title.new'|trans }}
            </h3>

            <div class="pull-right" style="padding-top: 20px;">
                <a href="{{ path('bank_index') ~ pagination_helper.buildQuery }}" class="btn btn-danger">
                    <span class="glyphicon glyphicon-remove"></span> {{ 'form.link.cancel'|trans }}
                </a>
            </div>

            <div class="clearfix"></div>

        </div>

        <div class="panel-body">

            {{ form_start(form, {'action': path('bank_new') ~ pagination_helper.buildQuery, 'attr' : {'class' : '', 'novalidate': 'novalidate'}}) }}

            {{ form_errors(form) }}

            {{ include('partials/alerts.html.twig') }}

            <div class="row">
                {{ form_row(form.description, {'attr': {'autofocus': true}}) }}
                {{ form_row(form.agency) }}
                {{ form_row(form.account) }}
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12">
                    {{ form_widget(form.buttons.save_and_keep, {'attr' : {'class' : 'btn-primary'}}) }}
                    {{ form_widget(form.buttons.save_and_new, {'attr' : {'class' : 'btn-primary'}}) }}
                    {{ form_widget(form.buttons.save_and_close, {'attr' : {'class' : 'btn-primary'}}) }}
                </div>
            </div>

            {{ form_end(form) }}

        </div>

    </div>

{% endblock %}